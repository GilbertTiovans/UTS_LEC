<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_margin="3dp"
    android:background="@drawable/rounded_corners">

    <!-- Text layout for exercise details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="16dp">

        <!-- Exercise Name -->
        <TextView
            android:id="@+id/exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#355070" />

        <!-- Calories Burnt -->
        <TextView
            android:id="@+id/exercise_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalori Burn: 78kcal"
            android:textSize="14sp"
            android:textColor="#6A6A6A" />

        <!-- Exercise Description -->
        <TextView
            android:id="@+id/exercise_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi: 3 Set, 8 Repetisi"
            android:textSize="14sp"
            android:textColor="#6A6A6A" />
    </LinearLayout>

    <!-- "Add" button on the right side -->
    <ImageButton
        android:id="@+id/btn_add_exercise"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button"
        android:contentDescription="Add Exercise"
        android:padding="8dp"
        android:src="@drawable/ic_add"
        app:tint="#000000" />
</LinearLayout>
