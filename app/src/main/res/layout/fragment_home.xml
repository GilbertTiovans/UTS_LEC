<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_picture" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning ðŸ‘‹"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JordanWells88"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/baseline_notifications_none_24" />
        </LinearLayout>

        <!-- Today's Calories Section -->

        <!-- Water Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Today's Calories"
                android:textColor="#234881"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eaten"
                        android:textColor="#234881"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥© 1660 kcal"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Burned"
                        android:textColor="#234881"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ 210 kcal"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <!-- Circular Progress Bar for Calories -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Bagian kiri (kosong atau bisa diisi dengan konten lain) -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <!-- Bagian kanan (ProgressBar dan teks) -->
                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp">

                        <!-- ProgressBar -->
                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:progress="68"
                            android:progressDrawable="@drawable/circular_progress_bar" />

                        <!-- Text overlay for percentage -->
                        <TextView
                            android:id="@+id/progressText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="68%"
                            android:textColor="#0E376D"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <!-- Text overlay for kcal left -->
                        <TextView
                            android:id="@+id/kcalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/progressText"
                            android:layout_centerHorizontal="true"
                            android:text="1140 kcal left"
                            android:textColor="#0E376D"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F5F5F5">

            <!-- Water Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/screenshot_2024_10_24_174423"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Water title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Water"
                    android:textColor="#234881"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <!-- Water Progress and Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <!-- Bagian kiri (kosong atau bisa diisi dengan konten lain) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily"
                            android:textColor="#234881"
                            android:textSize="10sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goal 2.5L"
                            android:textColor="#234881"
                            android:textSize="10sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:progress="68"
                            android:progressDrawable="@drawable/circular_progress_bar" />

                        <!-- Text overlay for percentage -->
                        <TextView
                            android:id="@+id/progressText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="57%"
                            android:textColor="#0E376D"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Text overlay for kcal left -->
                        <TextView
                            android:id="@+id/kcalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/progressText"
                            android:layout_centerHorizontal="true"
                            android:text="1140 ml"
                            android:textColor="#0E376D"
                            android:textSize="8dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Current Weight Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card1"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Current Weight title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
                <!-- Current Weight value -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72.4 Kg"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <!-- Weight change -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Weight Change Icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_arrow_circle_down_24" />

                    <!-- Weight Change Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Kg (-5.6%)"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#FF0000"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <!-- Title Calorie Journey -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calorie Journey"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp" />

            <!-- Circular Progress and Bar Chart Side by Side -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Circular Progress and Calorie Data -->
                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <!-- ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:progress="68"
                        android:progressDrawable="@drawable/circular_progress_baryellow" />

                    <!-- Text overlay for percentage -->
                    <TextView
                        android:id="@+id/progressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="840 Left"
                        android:textColor="#0E376D"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Text overlay for kcal left -->
                    <TextView
                        android:id="@+id/kcalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progressText"
                        android:layout_centerHorizontal="true"
                        android:text="1140 kcal"
                        android:textColor="#0E376D"
                        android:textSize="8sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!-- Daily Calorie Progress (Bar Chart) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Monday Bar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="70dp"
                            android:background="#FFC107" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="M"
                            android:textSize="12sp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <!-- Tuesday Bar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="80dp"
                            android:background="#FF0000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Tu"
                            android:textSize="12sp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <!-- Wednesday Bar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:background="#FFC107" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="W"
                            android:textSize="12sp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <!-- Thursday Bar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="90dp"
                            android:background="#FFC107" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Th"
                            android:textSize="12sp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <!-- Friday Bar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:background="#E0E0E0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="F"
                            android:textSize="12sp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <!-- Saturday Bar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="#E0E0E0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Sa"
                            android:textSize="12sp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <!-- Sunday Bar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="10dp"
                            android:background="#E0E0E0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Su"
                            android:textSize="12sp"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <!-- Text for "Log Activity" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Activity"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="16dp"
            android:layout_gravity="start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card1"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <!-- Activity List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/black"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="8dp">

                <!-- Vertical Icons and Line -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="16dp">

                    <!-- First icon (Breakfast) -->
                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@drawable/baseline_dining_24"
                        android:background="@drawable/circle_bg_yori"
                        android:padding="8dp"
                        android:layout_gravity="center"/>

                    <!-- Vertical line connecting the icons -->
                    <View
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        android:background="@color/yellow"
                        android:layout_gravity="center"/>

                    <!-- Second icon (Walk) -->
                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@drawable/baseline_directions_run_24"
                        android:background="@drawable/circle_bg_yori"
                        android:padding="8dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <!-- Activity Info (Breakfast and Walking) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <!-- Breakfast Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp">

                        <!-- Breakfast Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Breakfast"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nasi + Ayam Goreng + Sambal"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <!-- Calories -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1856 KCAL"
                            android:textColor="@color/yellow"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="end"/>
                    </LinearLayout>

                    <!-- Walking Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Walking Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jalan ke Kampus"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300 meter"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <!-- Calories -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-303 KCAL"
                            android:textColor="@color/yellow"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="end"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <!-- More sections like Calorie Journey, Log Activity can be added similarly -->

    </LinearLayout>
</ScrollView>