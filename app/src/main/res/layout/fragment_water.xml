<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.WaterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".fragment.WaterFragment">

        <!-- TODO: Update blank fragment layout -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ImageView di bawah -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:scaleType="fitXY"
                android:src="@drawable/drink1" />

            <TextView
                android:id="@+id/text_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Hydration Monitor"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <ImageView
                android:id="@+id/bgmotif"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="210dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_water" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="Hydration Needed"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="2.500 ml"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/water_progress" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:padding="11dp"
            android:rowCount="2">

            <!-- Water Buttons -->
            <Button
                android:id="@+id/btn50ml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/btn_drink"
                android:fontFamily="@font/nunito_extrabold"
                android:text="50ml"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn75ml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/btn_drink"
                android:fontFamily="@font/nunito_extrabold"
                android:text="75ml"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn100ml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/btn_drink"
                android:fontFamily="@font/nunito_extrabold"
                android:text="100ml"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn120ml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/btn_drink"
                android:fontFamily="@font/nunito_extrabold"
                android:text="120ml"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn145ml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/btn_drink"
                android:fontFamily="@font/nunito_extrabold"
                android:text="145ml"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn150ml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/btn_drink"
                android:fontFamily="@font/nunito_extrabold"
                android:text="150ml"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn170ml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/btn_drink"
                android:fontFamily="@font/nunito_extrabold"
                android:text="170ml"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn200ml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/btn_drink"
                android:fontFamily="@font/nunito_extrabold"
                android:text="200ml"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="11sp"
                app:backgroundTint="@null" />

        </GridLayout>

        <Button
            android:id="@+id/btnCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_drink"
            android:fontFamily="@font/nunito_extrabold"
            android:padding="10dp"
            android:text="Custom"
            android:textAlignment="center"
            android:textColor="@color/Dark_blue"
            android:textSize="14sp"
            app:backgroundTint="@null" />

        <!-- Layout untuk input "Custom Drink" -->
        <LinearLayout
            android:id="@+id/customLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Drink *"
                android:textSize="14sp"
                android:textColor="#FF0000" />

            <EditText
                android:id="@+id/etDrinkName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext_background"
                android:hint="Es Teh Solo"
                android:padding="12dp"
                android:maxLength="30"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total (ml) *"
                android:textSize="14sp"
                android:textColor="#FF0000" />

            <EditText
                android:id="@+id/etDrinkAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext_background"
                android:hint="100ml"
                android:padding="12dp"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>


        <Button
            android:id="@+id/btnDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_drink"
            android:fontFamily="@font/nunito_extrabold"
            android:padding="10dp"
            android:text="Drink"
            android:textAlignment="center"
            android:textColor="@color/Dark_blue"
            android:textSize="14sp"
            app:backgroundTint="@null" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/bg_hisdrink"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="History"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="-50dp"
                android:src="@drawable/empty_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="bottom|center_horizontal"
                android:text="You haven't had a drink today"
                android:textAlignment="center"
                android:textColor="@color/Dark_blue"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"></LinearLayout>


    </LinearLayout>
</ScrollView>