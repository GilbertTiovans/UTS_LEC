<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background white -->
            <stroke android:width="2dp" android:color="@android:color/holo_orange_light" /> <!-- Yellow border when selected -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background white -->
            <stroke android:width="2dp" android:color="@color/black" /> <!-- Black border by default -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
