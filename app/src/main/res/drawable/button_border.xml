<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape>
            <solid android:color="#D3D3D3" /> <!-- Light gray for shadow -->
            <corners android:radius="30dp" />  <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Button background layer -->
    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
        <shape>
            <solid android:color="@android:color/white" /> <!-- White background -->
            <corners android:radius="30dp" /> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="#B0B0B0" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
